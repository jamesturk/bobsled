{
    "dev": {
        "lambda_description": "bobsled entrypoint",
        "memory_size": 256,
        "app_function": "bobsled.app.app",
        "events": [
            {
                "function": "bobsled.status.update_status",
                "expression": "rate(30 minutes)"
            }
        ],
        "apigateway_enabled": false,
        "async_resources": false,
        "keep_warm": false,
        "route53_enabled": false,
        "runtime": "python3.6",
        "extra_permissions": [
            {
                "Effect": "Allow",
                "Action": ["iam:PassRole"],
                "Resource": "*"
            },
            {
                "Effect": "Allow",
                "Action": [
                    "ec2:RunInstances",
                    "ec2:CreateTags",
                    "ec2:DescribeInstances",
                    "ec2:TerminateInstances"
                ],
                "Resource": "*"
            },
            {
                "Effect": "Allow",
                "Action": [
                    "ecs:DescribeTaskDefinition",
                    "ecs:RunTask",
                    "ecs:DescribeTasks",
                    "ecs:ListContainerInstances",
                    "ecs:DescribeContainerInstances"
                ],
                "Resource": "*"
            }
        ],

        "s3_bucket": "zappa-bobsled",
        "environment_variables": {
            "BOBSLED_STATUS_BUCKET": "",
            "BOBSLED_CONFIG_PATH": "",
            "BOBSLED_SUBNET_ID": "",
            "BOBSLED_SECURITY_GROUP_ID": ""
        }
    }
}
